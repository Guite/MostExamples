application "AutoProject" {
    vendor "Guite"
    author "Axel Guckelsberger"
    email "info@modulestudio.de"
    url "http://modulestudio.de"
    prefix "auoro"
    generatorSettings {
        settingsContainer "Settings"
    }
    entities {
        entity "project" leading {
            nameMultiple "projects"
            displayPattern "#sortNumber# - #title#"
            fields {
                integer "sortNumber" sortablePosition {
                    defaultValue "1"
                },
                string "title" {
                    defaultValue ""
                    length 200
                },
                date "startDate" {
                    defaultValue ""
                },
                date "endDate" {
                    defaultValue ""
                },
                boolean "active" ajaxTogglability {
                    defaultValue "true"
                }
            }
            actions {
                mainAction "Main",
                viewAction "View",
                displayAction "Display",
                editAction "Edit"
            }
        },
        entity "task" {
            nameMultiple "tasks"
            displayPattern "#title#"
            fields {
                string "title" {
                    defaultValue ""
                    length 200
                },
                user "owner" {
                    blameable CREATE
                    onAccountDeletionCreator ADMIN
                },
                integer "completed" percentage {
                    defaultValue "0"
                }
            }
            actions {
                mainAction "Main",
                viewAction "View",
                displayAction "Display",
                editAction "Edit"
            }
        },
        entity "taskType" {
            nameMultiple "taskTypes"
            displayPattern "#title#"
            fields {
                string "title" {
                    defaultValue ""
                    length 200
                }
            }
            actions {
                mainAction "Main",
                viewAction "View",
                displayAction "Display",
                editAction "Edit"
            }
        }
    }
    relations {
        one2many bidirectional {
            source "project"
            sourceAlias "project"
            target "task"
            targetAlias "tasks"
        },
        one2one bidirectional {
            source "task"
            sourceAlias "task"
            target "taskType"
            targetAlias "taskType"
        }
    }
}